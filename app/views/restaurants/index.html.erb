
<div class="container">
  <h1 class="text-center">Restaurants</h1>
    <div class="row">
      <div class="col-xs-12">
        <% @restaurants.each do |restaurant| %>
          <div class="restaurant-card">
            <div class="restaurant-infos">
              <h2><%= restaurant.name %></h2>
              <p><%= restaurant.address %></p>
            </div>
            <div class="restaurant-link">
              <%= link_to "More info", restaurant_path(restaurant), class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
